import os
import argparse 

import tfce_mediation

DESCRIPTION = "Mediation with TFCE"

parser = argparse.ArgumentParser(description = DESCRIPTION)

subparsers = parser.add_subparsers(help = "sub-command help")

voxel_step0 = subparsers.add_parser("voxel-step0")
voxel_step0.set_defaults(func = tfce_mediation.voxel.step0_load_volumes.run)
tfce_mediation.voxel.step0_load_volumes.getArgumentParser(voxel_step0)

voxel_step1 = subparsers.add_parser("voxel-step1")
voxel_step1.set_defaults(func = tfce_mediation.voxel.step1_tfce_mediation.run)
tfce_mediation.voxel.step1_tfce_mediation.getArgumentParser(voxel_step1)

args = parser.parse_args()

args.func(args)